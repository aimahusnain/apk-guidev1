{
    "version": 2,
    "builds": [
      { "src": "api/**/*.ts", "use": "@vercel/node" },
      { "src": "src/api/**/*.js", "use": "@vercel/node" }
    ],
    "routes": [
      { "handle": "filesystem" },
      { "src": "/.*", "dest": "/index.ts" }
    ],
    "env": {
      "DATABASE_URL": "@your-secret-database-url"
    },
    "build": {
      "env": {
        "VERCEL_ENV": "@vercel/env"
      },
      "scripts": {
        "build": "prisma generate && npm run build",
        "prerender": "npm run build"
      }
    }
  }
  